<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:divider="#000000"
    android:dividerPadding="0dp"
    android:contextClickable="true"
    android:showDividers="middle">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:text="Amount"
            android:id="@+id/amountText"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnWeight="0.25"
            android:layout_rowWeight="1"
            android:textAlignment="textEnd"
            android:paddingRight="30dp"
            android:textSize="20dp" />

        <Button
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:text="$10"
            android:id="@+id/tenButton"
            android:onClick="ten"
            android:background="@drawable/graybutton"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="2dp" />

        <Button
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:text="$25"
            android:id="@+id/twentyFiveButton"
            android:onClick="twentyFive"
            android:background="@drawable/graybutton"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="2dp" />

        <EditText
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:ems="10"
            android:id="@+id/otherEditText"
            android:paddingEnd="30dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textAlignment="textEnd"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:text="Credit Card"
            android:id="@+id/creditCardText"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnWeight="0.25"
            android:layout_rowWeight="1"
            android:textAlignment="textEnd"
            android:paddingRight="30dp"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:text="CVV"
            android:id="@+id/cvvText"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnWeight="0.25"
            android:layout_rowWeight="1"
            android:textAlignment="textEnd"
            android:paddingRight="30dp"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:text="Expiration"
            android:id="@+id/expiration"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_columnWeight="0.25"
            android:layout_rowWeight="1"
            android:textAlignment="textEnd"
            android:paddingRight="30dp"
            android:textSize="20dp" />

        <EditText
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:ems="10"
            android:id="@+id/creditCardEditText"
            android:paddingEnd="30dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:inputType="number"
            android:maxLength="16" />

        <EditText
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:ems="10"
            android:id="@+id/cvvEditText"
            android:paddingEnd="30dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:inputType="numberDecimal"
            android:maxLength="6" />

        <Spinner
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:id="@+id/daySpinner"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <Spinner
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:id="@+id/monthSpinner"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <Spinner
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:id="@+id/yearSpinner"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:paddingRight="5dp">

        <TextView
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:text="First Name"
            android:id="@+id/firstNameText"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textAlignment="textEnd"
            android:paddingRight="30dp"
            android:textSize="20dp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:text="Last Name"
            android:id="@+id/lastNameText"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textAlignment="textEnd"
            android:paddingRight="30dp"
            android:textSize="20dp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:text="Address"
            android:id="@+id/addressText"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textAlignment="textEnd"
            android:paddingRight="30dp"
            android:textSize="20dp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:text="City"
            android:id="@+id/cityText"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textAlignment="textEnd"
            android:paddingRight="30dp"
            android:textSize="20dp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:text="State"
            android:id="@+id/stateText"
            android:layout_column="0"
            android:layout_row="5"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textAlignment="textEnd"
            android:paddingRight="30dp"
            android:textSize="20dp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:text="Zip Code"
            android:id="@+id/zipCodeText"
            android:layout_column="0"
            android:layout_row="6"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textAlignment="textEnd"
            android:paddingRight="30dp"
            android:textSize="20dp" />

        <EditText
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:ems="10"
            android:id="@+id/firstNameEditText"
            android:paddingEnd="30dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1.5"
            android:layout_rowWeight="1"
            android:inputType="textPersonName" />

        <EditText
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/lastNameEditText"
            android:paddingEnd="30dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <EditText
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/addressEditText"
            android:paddingEnd="30dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <EditText
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/cityEditText"
            android:paddingEnd="30dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <EditText
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/stateEditText"
            android:paddingEnd="30dp"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <EditText
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/zipCodeEditText"
            android:paddingEnd="30dp"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:maxLength="12" />

        <Button
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:text="Cancel"
            android:id="@+id/cancelButton"
            android:onClick="cancel"
            android:background="@drawable/graybutton"
            android:layout_column="0"
            android:layout_row="7"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp" />

        <Button
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:text="Donate"
            android:onClick="donate"
            android:background="@drawable/redbutton"
            android:id="@+id/donateButton"
            android:layout_column="1"
            android:layout_row="7"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp" />

    </GridLayout>
</LinearLayout>