<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:divider="#000000"
    android:dividerPadding="0dp"
    android:contextClickable="true"
    android:showDividers="middle">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:paddingRight="5dp"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:text="Compare the Average Daily Food Costs for a Family of Four"
            android:id="@+id/compare"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowWeight="0.3"
            android:layout_columnSpan="4"
            android:textAlignment="textStart"
            android:textSize="20dp"
            android:layout_margin="10dp" />

        <com.example.nazanin.ta05.BarChartView
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:id="@+id/viewBarChart"
            android:background="#f5f5f5"
            android:longClickable="true"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_rowWeight="8"
            android:layout_columnWeight="1"
            android:layout_rowSpan="1" />

        <Spinner
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:id="@+id/firstSpinner"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1.5"
            android:layout_rowWeight="1" />

        <Spinner
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:id="@+id/secondSpinner"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1.5"
            android:layout_rowWeight="1" />

        <Button
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:text="Home"
            android:id="@+id/homeButton"
            android:onClick="home"
            android:background="@drawable/graybutton"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="5dp" />

    </GridLayout>
</LinearLayout>