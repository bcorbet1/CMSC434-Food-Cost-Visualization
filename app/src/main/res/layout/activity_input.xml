<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.nazanin.ta05.PieChartView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/viewPieChart"
        android:background="#f5f5f5"
        android:longClickable="true"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_rowWeight="8"
        android:layout_columnWeight="1" />

    <TextView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:text="Breakfast"
        android:id="@+id/breakfastText"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textAlignment="textEnd"
        android:paddingRight="30dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:text="Lunch"
        android:id="@+id/lunchText"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textAlignment="textEnd"
        android:paddingRight="30dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:text="Dinner"
        android:id="@+id/dinnerText"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textAlignment="textEnd"
        android:paddingRight="30dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:text="Snacks"
        android:id="@+id/snacksText"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textAlignment="textEnd"
        android:paddingRight="30dp"
        android:textSize="20dp" />

    <EditText
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/breakfastEditText"
        android:paddingEnd="30dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1" />

    <EditText
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/lunchEditText"
        android:paddingEnd="30dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1" />

    <EditText
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/dinnerEditText"
        android:paddingEnd="30dp"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1" />

    <EditText
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/snacksEditText"
        android:paddingEnd="30dp"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1" />

    <Button
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:text="Cancel"
        android:id="@+id/cancelButton"
        android:layout_column="0"
        android:layout_row="5"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1" />

    <Button
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:text="Save"
        android:background="#FFA0FFFF"
        android:id="@+id/saveButton"
        android:onClick="save"
        android:layout_column="1"
        android:layout_row="5"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1" />

</GridLayout>